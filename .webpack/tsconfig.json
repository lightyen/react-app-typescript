{
  "extends": "../tsconfig.base",
  "compilerOptions": {
    "plugins": [
      {
        "name": "typescript-tslint-plugin",
        "configFile": "../tslint.json",
        "alwaysShowRuleFailuresAsWarnings": false // tslint 警告總是顯示 error
      }
    ],
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["esnext"],
    "typeRoots": [],
    "baseUrl": ".",
    "paths": {
      "cwd/*": [".webpack/*"]
    }
  }
}
