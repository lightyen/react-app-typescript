{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run (Development)",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "yarn",
      "args": ["run", "start"],
      "problemMatcher": [],
      "presentation": {
        "clear": true,
        "revealProblems": "onProblem"
      }
    },
    {
      "label": "Build (Production)",
      "group": "build",
      "type": "shell",
      "command": "yarn",
      "args": ["build"],
      "problemMatcher": [],
      "presentation": {
        "clear": true,
        "revealProblems": "onProblem"
      }
    },
    {
      "label": "Build (DLL)",
      "group": "build",
      "type": "shell",
      "command": "yarn",
      "args": ["run", "webpack-dll"],
      "problemMatcher": [],
      "presentation": {
        "clear": true
      }
    },
    {
      "label": "Run (bundle-analyzer)",
      "group": "test",
      "type": "shell",
      "command": "yarn",
      "args": ["run", "webpack-analyzer"],
      "problemMatcher": [],
      "presentation": {
        "clear": true
      }
    },
    {
      "label": "Open Chrome with Debugger",
      "type": "shell",
      "group": "none",
      "isBackground": true,
      "linux": {
        "command": "google-chrome http://localhost:3000/ --remote-debugging-port=9222"
      },
      "windows": {
        "command": "start chrome http://localhost:3000/ --remote-debugging-port=9222"
      },
      "osx": {
        "command": "open -a \"Google Chrome\" http://localhost:3000/ --args --remote-debugging-port=\"9222\""
      },
      "problemMatcher": [],
      "presentation": {
        "clear": true
      }
    }
  ]
}
