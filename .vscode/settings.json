{
  "editor.formatOnSave": true,
  "formatFiles.excludePattern": "node_modules,dist,src/assets,.webpack/*.js,.gitignore,.editorconfig,yarn.lock",
  "files.associations": {
    "*.ejs": "html",
    ".prettierrc": "json"
  },
  "search.exclude": {
    "**/dist": true,
    "**/node_modules": true,
    "**/bower_components": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "npm.autoDetect": "off",
  "typescript.tsc.autoDetect": "off",
  "favorites.resources": [
    "src"
  ]
}
