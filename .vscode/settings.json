{
  "editor.formatOnSave": true,
  "formatFiles.excludePattern": "node_modules,dist,.webpack/*.js,.gitignore,.editorconfig,yarn.lock",
  "files.associations": {
    "*.ejs": "html",
    ".prettierrc": "json",
    ".eslintrc": "json"
  },
  "search.exclude": {
    "**/dist": true,
    "**/build": true,
    "**/node_modules": true,
    "**/bower_components": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "npm.autoDetect": "off",
  "typescript.tsc.autoDetect": "off",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    { "language": "typescript", "autoFix": true },
    { "language": "typescriptreact", "autoFix": true }
  ],
  "files.exclude": {
    "**/.awcache": true,
    "**/node_modules": true
  },
  "files.watcherExclude": {
    "**/.awcache/**": true
  }
}
