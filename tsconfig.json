{
  "extends": "./tsconfig.base",
  "compilerOptions": {
    "plugins": [
      {
        "name": "typescript-tslint-plugin",
        "configFile": "tslint.json",
        "alwaysShowRuleFailuresAsWarnings": false // tslint 警告總是顯示 error
      }
    ],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "types": ["react", "node"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "~assets/*": ["src/assets/*", "src/assets/fonts/*", "src/assets/images/*"]
    }
  },
  "include": ["src/**/*"]
}
