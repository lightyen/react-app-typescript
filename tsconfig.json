{
  "extends": "./tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "components": ["src/components"],
      "components/*": ["src/components/*"],
      "stores": ["src/stores"],
      "model": ["src/stores/model"],
      "utils": ["src/utils"]
    }
  },
  "include": ["src/**/*"]
}
