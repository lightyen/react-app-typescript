{
  "extends": "./tsconfig.base",
  "compilerOptions": {
    "jsx": "preserve", // 保留 jsx 語法交給 babel 編譯
    "module": "esnext",
    "moduleResolution": "node",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "types": [
      "react-hot-loader",
      "styled-components",
      "react",
      "react-dom",
      "react-router-dom"
    ],
    "baseUrl": ".",
    "paths": {
      "components": ["src/components"],
      "components/*": ["src/components/*"],
      "stores": ["src/stores"],
      "model": ["src/stores/model"],
      "utils": ["src/utils"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules/@types/react-native/*.d.ts"]
}
